<Window x:Class="WPF.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <TabControl Name="tabControlMain" Margin="12" FlowDirection="LeftToRight" TabStripPlacement="Top" Background="LightGray">
        <TabItem Name="Counter" Header="Counter">
            <Frame Name="FrameCounter" Source="UserControls/CounterUC.xaml"/>
        </TabItem>
        <TabItem Name="ListView" Header="ListView">
            <Frame Name="FrameListView" Source="UserControls/ListViewUC.xaml"/>
        </TabItem>
    </TabControl>
</Window>
